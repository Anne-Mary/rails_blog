<div class="post_wrapper">

	<h1 class="title">
		<%= @post.title %>
	</h1>

	<p class = "date">
		Submitted <%= time_ago_in_words(@post.created_at) %> ago
	</p>
	<!-- time_ago_in_words(@post.created_at) -->

	<p class = "body">
		<%= @post.body %>
	</p>

	<%= link_to 'Destroy', @post, method: :delete %>
 	<%= link_to "Edit", edit_post_path(@post) %>
</div>


