<div class="post_wrapper">
	<h1>New Post</h1>

	<%= form_for :post, url: posts_path do |f| %>

		<p> 
			<%= f.label :title %> <br>
		    <%= f.text_field :title%>
		</p>

		<p>
			<%= f.label :body %><br>
		    <%= f.text_area :body%>
		</p>
		
		<div>
		    <%= f.label :image %><br>
		    <%= f.file_field :image %>
        </div>

		<p>
			<%= f.submit %>
		</p>

	<% end %>
</div>